{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"]
}
